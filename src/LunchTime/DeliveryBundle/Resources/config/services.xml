<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="form.type_extension.csrf.enabled">false</parameter>
        <parameter key="lt_delivery.converter.array.class">LunchTime\DeliveryBundle\Request\ParamConverter\ArrayParamConverter</parameter>
    </parameters>

    <services>
        <service id="lt_delivery.converter.array" class="%lt_delivery.converter.array.class%">
            <tag name="request.param_converter" converter="array" />
        </service>
    </services>
</container>
