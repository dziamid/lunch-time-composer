<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="lt.backend.menu.entity">LunchTime\DeliveryBundle\Entity\Menu</parameter>
        <parameter key="lt.backend.menu.admin">LunchTime\BackendBundle\Admin\MenuAdmin</parameter>
        <parameter key="lt.backend.menu.crud">SonataAdminBundle:CRUD</parameter>
    </parameters>

    <services>
        <service id="lt.backend.menu" class="%lt.backend.menu.admin%">
            <tag name="sonata.admin" manager_type="orm" group="Menu" label="All menus"/>
            <argument/>
            <argument>%lt.backend.menu.entity%</argument>
            <argument>%lt.backend.menu.crud%</argument>

            <call method="setTranslationDomain">
                <argument>SonataAdminBundle</argument>
            </call>
        </service>
    </services>

</container>
